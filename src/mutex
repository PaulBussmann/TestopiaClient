#define _THREAD_

namespace std
{
/// trivial implementation of mutex class for pre-C++ 2011 compilers
class mutex
{
public:
	mutex()
	{
        InitializeCriticalSection(&m_Sec);
	}

	~mutex()
	{
        DeleteCriticalSection(&m_Sec);
	}

	void lock()
	{
        EnterCriticalSection(&m_Sec);
	}
	void unlock()
	{
        LeaveCriticalSection(&m_Sec);
	}
	CRITICAL_SECTION m_Sec;
};
}
